generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String        @id @default(cuid())
  name           String
  email          String        @unique
  password       String?
  role           String        @default("user") // "user" | "admin"
  coins          Int           @default(0)
  createdAt      DateTime      @default(now())
  emailVerified  DateTime?
  image          String?

  // Relations
  wallet         Wallet?
  transactions   Transaction[]
  teams          TeamMember[]
  Team           Team[]
  accounts       Account[]
  sessions       Session[]
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt

  // Relation
  user User @relation(fields: [userId], references: [id])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  amountCoins Int
  amountPKR   Int
  method      String // EasyPaisa, JazzCash, Bank
  type        String // "deposit" | "withdraw" | "entry" | "reward"
  status      String // "pending" | "approved" | "rejected"
  proofUrl    String?
  createdAt   DateTime @default(now())

  // Relation
  user User @relation(fields: [userId], references: [id])
}

model Tournament {
  id        String   @id @default(cuid())
  title     String
  mode      String // Solo, Duo, Squad
  entryFee  Int
  prizePool Int
  status    String   @default("upcoming") // upcoming, running, ended
  createdAt DateTime @default(now())

  winners Winner[]
  teams   Team[]   @relation("TournamentTeams")
}

model Team {
  id           String  @id @default(cuid())
  name         String
  captainId    String
  tournamentId String?

  members    TeamMember[]
  captain    User         @relation(fields: [captainId], references: [id])
  tournament Tournament?  @relation("TournamentTeams", fields: [tournamentId], references: [id])
  Winner     Winner[]
}

model TeamMember {
  id     String @id @default(cuid())
  teamId String
  userId String
  role   String // captain | member

  team Team @relation(fields: [teamId], references: [id])
  user User @relation(fields: [userId], references: [id])
}

model Winner {
  id           String @id @default(cuid())
  tournamentId String
  teamId       String
  placement    Int
  rewardCoins  Int

  tournament Tournament @relation(fields: [tournamentId], references: [id])
  team       Team       @relation(fields: [teamId], references: [id])
}

//
// --- üîê NextAuth required models ---
//

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
