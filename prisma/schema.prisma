generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "rhel-openssl-3.0.x", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  // Prisma v7+ no longer supports `url` in schema files.
  // Move connection settings to `prisma.config.ts` or pass them to PrismaClient per https://pris.ly/d/config-datasource
  // For local development you can still use environment variables via a Prisma config file.
}

model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String?
  role          String    @default("user")
  coins         Int       @default(0)
  createdAt     DateTime  @default(now())
  emailVerified DateTime?
  image         String?
  wins          Int       @default(0)
  starEligible  Boolean   @default(false)

  // ✅ Relations
  wallet            Wallet?
  transactions      Transaction[]
  teams             TeamMember[]       @relation("TeamMembers")
  Team              Team[]
  notifications     Notification[]
  supportRequests   SupportRequest[]
  pushSubscriptions PushSubscription[]
  accounts          Account[]
  sessions          Session[]
}

model Wallet {
  id        String   @id @default(cuid())
  userId    String   @unique
  balance   Int      @default(0)
  updatedAt DateTime @updatedAt

  // ✅ Back relation
  user User @relation(fields: [userId], references: [id])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  amountCoins Int
  amountPKR   Int
  method      String
  type        String
  status      String
  proofUrl    String?
  createdAt   DateTime @default(now())

  // ✅ Back relation
  user User @relation(fields: [userId], references: [id])
}

model Tournament {
  id              String    @id @default(cuid())
  title           String
  mode            String
  gameType        String    @default("BR")
  entryFee        Int
  prizePool       Int
  prizeTop1       Int?
  prizeTop2       Int?
  prizeTop3       Int?
  description     String?
  startTime       DateTime?
  maxParticipants Int?
  status          String    @default("upcoming")
  createdAt       DateTime  @default(now())
  isOpen          Boolean   @default(true)
  lobbyCode       String?
  lobbyPassword   String?

  winners Winner[]
  teams   Team[]   @relation("TournamentTeams")
}

model Team {
  id           String  @id @default(cuid())
  name         String
  captainId    String
  tournamentId String?

  members    TeamMember[]
  captain    User         @relation(fields: [captainId], references: [id])
  tournament Tournament?  @relation("TournamentTeams", fields: [tournamentId], references: [id])
  Winner     Winner[]
}

model TeamMember {
  id     String  @id @default(cuid())
  teamId String
  userId String?
  role   String  @default("member")

  // Optional guest fields
  playerName String?
  phone      String?
  gameId     String?
  email      String?

  team Team  @relation(fields: [teamId], references: [id], onDelete: Cascade)
  user User? @relation("TeamMembers", fields: [userId], references: [id], onDelete: SetNull)
}

model Winner {
  id           String @id @default(cuid())
  tournamentId String
  teamId       String
  placement    Int
  rewardCoins  Int

  tournament Tournament @relation(fields: [tournamentId], references: [id])
  team       Team       @relation(fields: [teamId], references: [id])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  type      String
  message   String
  metadata  Json?
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model PushSubscription {
  id        String   @id @default(cuid())
  userId    String?
  user      User?    @relation(fields: [userId], references: [id])
  endpoint  String   @unique
  p256dh    String
  auth      String
  createdAt DateTime @default(now())

  @@index([userId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SupportRequest {
  id            String   @id @default(cuid())
  userId        String
  subject       String
  category      String
  priority      String   @default("medium")
  message       String
  status        String   @default("open")
  viewed        Boolean  @default(false)
  adminResponse String?
  updatedBy     String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([category])
  @@index([priority])
}
